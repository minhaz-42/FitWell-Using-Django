# ==============================================
# NutriAI Environment Configuration
# ==============================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# ==============================================
# Django Configuration
# ==============================================
SECRET_KEY=your-random-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.herokuapp.com

# ==============================================
# Database Configuration
# ==============================================
# SQLite (development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (production - uncomment when ready)
# DATABASE_URL=postgresql://user:password@localhost:5432/nutriai

# ==============================================
# Email Configuration (Gmail SMTP)
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_FROM_ADDRESS=noreply@nutriai.com
EMAIL_USE_TLS=True

# How to get Gmail App Password:
# 1. Enable 2-Factor Authentication in Gmail
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Select Mail > Windows Computer (or your device)
# 4. Copy the generated 16-character password
# 5. Paste it above as EMAIL_HOST_PASSWORD

# ==============================================
# Qwen AI Model Configuration
# ==============================================
QWEN_LOCAL_MODEL_PATH=/Users/tanvir/Desktop/nutriaiproject/models/Qwen
QWEN_LOCAL_PORT=21002
QWEN_DEVICE=cpu

# QWEN_DEVICE options:
# - cpu (slower, works on all machines)
# - cuda (fast, requires NVIDIA GPU)
# - mps (fast on Apple Silicon Macs)

# ==============================================
# Application Settings
# ==============================================
# Default timezone
TIME_ZONE=Asia/Kolkata

# Language
LANGUAGE_CODE=en-us

# ==============================================
# Security Settings (Production)
# ==============================================
# CSRF settings
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# CORS settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=INFO

# ==============================================
# Optional: Third-party Services
# ==============================================
# Add additional service keys as needed
# SENTRY_DSN=
# STRIPE_API_KEY=
